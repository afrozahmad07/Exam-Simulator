# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
DATABASE_URL=sqlite:///exam_simulator.db

# OpenAI API Key (for AI question generation)
OPENAI_API_KEY=your-openai-api-key-here

# Gemini API Key (optional - alternative to OpenAI)
GEMINI_API_KEY=your-gemini-api-key-here

# Production Settings
FLASK_ENV=production
FLASK_DEBUG=False

# Session Security (set to True in production with HTTPS)
REMEMBER_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# Database Configuration (for PostgreSQL in production)
# DATABASE_URL=postgresql://user:password@localhost:5432/exam_simulator

# File Upload Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
